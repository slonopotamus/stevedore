    <bugTrackerUrl>https://github.com/slonopotamus/stevedore/issues</bugTrackerUrl>
    <docsUrl>https://github.com/slonopotamus/stevedore/blob/main/README.adoc</docsUrl>
    <iconUrl>https://cdn.jsdelivr.net/gh/slonopotamus/stevedore@main/resources/stevedore_orig.png</iconUrl>
  </metadata>
  <files>
    <file src="tools/**" target="tools" />
  </files>
</package>

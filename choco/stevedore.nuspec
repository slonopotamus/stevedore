<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2015/06/nuspec.xsd">
  <metadata>
    <id>stevedore</id>
    <version>{{ version }}</version>
    <title>Stevedore</title>
    <authors>Marat Radchenko</authors>
